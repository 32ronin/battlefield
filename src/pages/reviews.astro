<style lang="less">
/*-- -------------------------- -->
<---          Reviews           -->
<--- -------------------------- -*/

/* Mobile - 360px */
@media only screen and (min-width: 0rem) {
    #reviews-2290 {
        /* centers the button */
        text-align: center;
        padding: var(--sectionPadding);
        /* clips the orbs from causing overflow issues */
        overflow: hidden;
        position: relative;
        z-index: 1;

        .cs-container {
            width: 100%;
            /* changes to 1280px at large desktop */
            max-width: (824/16rem);
            margin: auto;
            display: flex;
            flex-direction: column;
            align-items: center;
            /* 48px - 64px */
            gap: clamp(3rem, 6vw, 4rem);
        }

        .cs-content {
            /* set text align to left if content needs to be left aligned */
            text-align: center;
            width: 100%;
            display: flex;
            flex-direction: column;
            /* centers content horizontally, set to flex-start to left align */
            align-items: center;
        }

        .cs-title {
            max-width: 20ch;
            margin: 0;
        }

        .cs-card-group {
            width: 100%;
            margin: 0;
            padding: 0;
            display: grid;
            grid-template-columns: repeat(12, 1fr);
            /* 8px - 20px */
            gap: clamp(0.5rem, 2vw, 1.25rem);
        }

        .cs-item {
            text-align: left;
            list-style: none;
            /* prevents padding from adding to height and width */
            box-sizing: border-box;
            /* 16px - 32px */
            padding: clamp(1rem, 2vw, 2rem);
            background-color: #fff;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: flex-start;
            grid-column: span 12;
            /* 16px - 24px */
            gap: clamp(1rem, 3vw, 1.5rem);
            position: relative;
            z-index: 1;
            transition: transform 0.3s;

            &::before {
                /* background color */
                content: "";
                width: 100%;
                height: 100%;
                background: var(--secondary);
                /* prevents the mouse from interacting it */
                pointer-events: none;
                opacity: 0.05;
                display: block;
                position: absolute;
                top: 0;
                left: 0;
                z-index: -1;
            }

            &::after {
                content: "";
                width: 0;
                height: (4/16rem);
                background: var(--primary);
                position: absolute;
                bottom: 0;
                left: 0;
                z-index: 1;
                transition: width 0.3s;
            }

            &:hover {
                transform: translateY(-0.5rem);

                &::after {
                    width: 100%;
                }
            }
        }

        .cs-quote {
            width: (40/16rem);
            height: auto;
            display: block;
        }

        .cs-header {
            font-size: (20/16rem);
            font-weight: 700;
            line-height: 1.2em;
            margin: 0;
            /* 16px - 24px */
            padding-bottom: clamp(1rem, 3vw, 1.5rem);
            color: var(--headerColor);
            border-bottom: 1px solid #e7e7e8;
        }

        .cs-item-text {
            font-size: (16/16rem);
            line-height: 1.5em;
            margin: 0;
            color: var(--bodyTextColor);
        }

        .cs-flex-group {
            /* in case one card has more text than the other, this pushes up against the review text so the name and title are always at the bottom. Only works if parent is a flexbox */
            margin-top: auto;
            display: flex;
            justify-content: flex-start;
            align-items: center;
            /* 8px - 24px */
            gap: clamp(0.8rem, 1.5vw, 1rem);
        }

        .cs-profile {
            width: (60/16rem);
            height: (60/16rem);
            margin: 0;
            box-sizing: border-box;
            display: block;
            position: relative;

            img {
                width: 100%;
                height: 100%;
                /* makes the image behave like a background image */
                object-fit: cover;
                position: absolute;
                top: 0;
                left: 0;
            }
        }

        .cs-name {
            font-size: (16/16rem);
            font-weight: 700;
            line-height: 1.5em;
            margin: 0;
            color: var(--headerColor);
            display: block;
        }

        .cs-job {
            font-size: (16/16rem);
            font-weight: 400;
            line-height: 1.5em;
            margin: 0;
            color: var(--bodyTextColor);
            display: block;
        }
    }
}

/* Tablet - 768px */
@media only screen and (min-width: 48rem) {
    #reviews-2290 {
        .cs-item {
            grid-column: span 6;
        }
    }
}

/* Large Desktop - 1300px */
@media only screen and (min-width: 81.25rem) {
    #reviews-2290 {
        .cs-container {
            max-width: (1280/16rem);
        }

        .cs-item {
            grid-column: span 3;
        }
    }
}
                                
</style>
